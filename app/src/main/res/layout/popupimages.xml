<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popupIP2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    android:padding="10px">


    <ImageView
        android:id="@+id/imageGPS"
        android:layout_width="384dp"
        android:layout_height="260dp"
        app:srcCompat="@drawable/loc1"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/textViewGPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sampe Text for now"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewGPS2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="Please take photos in landscape (horizontal) view!"
        android:textStyle="bold" />

    <Button
        android:id="@+id/okIPGPS"
        android:layout_width="47dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:drawablePadding="3sp"
        android:text="OK" />


</LinearLayout>
